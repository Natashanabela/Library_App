<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgadd"
    tools:context=".SendDataKategori">

    <ImageButton
        android:id="@+id/buttonBack"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/btnback"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menambahkan Kategori"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:id="@+id/text2"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textViewIdKategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_marginTop="40dp"
        android:hint="ID Kategori">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextIdKategori"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="none"
            android:textSize="18sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textViewNamaKategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewIdKategori"
        android:hint="Nama Kategori">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNamaKategori"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:textSize="18sp"/>
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2"
        android:layout_marginTop="250dp"
        android:width="300dp"
        android:text="TAMBAHKAN"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/darkbrown"
        android:id="@+id/buttonAddKategori"
        />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_below="@id/text2"
        android:layout_marginTop="320dp">

        <ImageButton
            android:id="@+id/buttonEdit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/btnedit"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter" />

        <ImageButton
            android:id="@+id/buttonDelete"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/btndelete"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter" />

    </LinearLayout>

</RelativeLayout>