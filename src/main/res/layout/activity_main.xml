<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bgmain"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:id="@+id/img1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img1"
        android:text="Klik tombol untuk mulai"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/text1"
        />

    <ImageButton
        android:id="@+id/btnpagemember"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btnmember"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/btnpagebuku"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnpagemember"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btnbuku"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter" />

    <ImageButton
        android:id="@+id/btnpagepeminjaman"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_below="@+id/btnpagebuku"
        android:layout_centerHorizontal="true"
        android:src="@drawable/btnpeminjaman"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter" />

</RelativeLayout>